<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/daily);">
  <div class="text-center">
    <h1>Your Personal Watch List</h1>
  </div>
</div>

<div class="container mt-3">
  <h2>My lists</h2>

  <div class="text-center d-flex justify-content-center">
    <span class="mb-2 text-center"><small><em class="text-muted"><%= "Log in or Create an account to start saving your lists" if @lists.empty? %></em></small></span>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <a href="/lists/<%= list.id %>" class="text-decoration-none text-dark">
          <div class="card mb-5" style="width: 20rem; height: 10rem;">
             <% if list.cover.attached? %>
              <div class="card-body shadow-sm p-5 d-flex align-items-center   justify-content-center"
              style="background-image: url('<%= cl_image_path list.cover.key %>');
                    background-position: center; background-size: cover;">
            <% else %>
              <div class="card-body shadow-sm p-5 d-flex align-items-center   justify-content-center"
              style="background-image: url('<%= list.image_url %>');
                    background-position: center; background-size: cover;">
            <% end %>
              <h5 class="font-weight-bold shadow bg-light"><%= list.name %></h5>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
