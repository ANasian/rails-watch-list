<div class="row">
  <div class="col-5 m-auto p-3">
    <h1 class="text-center">Add a Movie to your list</h1>    
  </div>
</div>

<div class="row">
  <div class="col-5 m-auto p-3">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Add Movie", class: "btn btn-primary text-light" %>
    </div>
    <% end %>    
  </div>
</div>