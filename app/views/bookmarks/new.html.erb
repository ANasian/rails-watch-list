<div class="row justify-content-end">
  <div class="col-5 p-3 m-auto form-card">
    <h3 class="text-center">Add a Bookmark to your list</h3> 
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.error_notification %>
      <%= f.input :comment, hint: "At least 6 characters" %>
      <%= f.association :movie %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Add Bookmark", class: "btn btn-primary text-light" %>
    </div>
    <% end %>    
  </div>
</div>